<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgray"
    tools:context=".sifreYenile">

    <EditText
        android:id="@+id/ogrencininMailiSifreYenile"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="textPersonName"/>


    <TextView
        android:id="@+id/ogrencininBolumuSifreYenile"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        />

    <EditText
        android:id="@+id/ogrencininSifresiSifreYenile"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/yeniSifre"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:hint="Belirlemek İstediğiniz Şifreyi Giriniz : "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/sifreYenile"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="470dp"
        android:layout_marginStart="250dp"
        android:text="Yenile"
        android:textAllCaps="false"
        android:onClick="sifreYenile"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:background="@drawable/button_darkbackground"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <ImageView
        android:id="@+id/kepViewSifreYenile"
        android:layout_width="132dp"
        android:layout_height="108dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="26dp"
        app:srcCompat="@drawable/kep"
        />

    <ImageView
        android:id="@+id/geriViewSifreYenile"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:onClick="geriGitSifreYenile"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/geri3" />



</RelativeLayout>