<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgray"
    tools:context=".notHesapla">

    <EditText
        android:id="@+id/durum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="301dp"
        android:ems="10"
        android:hint="Not Ortalamanız..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/finalN"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:hint="Final Notunuz"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/finalY"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Final Yüzdesini Giriniz..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/vizeN"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:hint="Vize Notunu Giriniz..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/vizeY"
        android:layout_width="355dp"
        android:layout_height="43dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:hint="Vize Yüzdesini Giriniz..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/notD"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="17dp"
        android:text="Not Ortalamanız "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />

    <Button
        android:id="@+id/hesapla"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="470dp"
        android:layout_marginStart="250dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:background="@drawable/button_darkbackground"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Hesapla"
        />

    <ImageView
        android:id="@+id/kepViewNotHesapla"
        android:layout_width="132dp"
        android:layout_height="108dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="26dp"
        app:srcCompat="@drawable/kep" />

    <ImageView
        android:id="@+id/geriViewNotHesapla"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:onClick="geriGitNotHesapla"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/geri3" />
    <TextView
        android:id="@+id/ogrencininMailiNotHesapla"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ogrencininBolumuNotHesapla"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        />


</RelativeLayout>