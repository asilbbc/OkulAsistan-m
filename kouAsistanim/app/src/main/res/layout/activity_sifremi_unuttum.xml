<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgray"
    tools:context=".sifremiUnuttum">


        <EditText
            android:id="@+id/uyeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:inputType="textEmailAddress"
            android:layout_marginStart="20dp"
            android:hint="Mailinizi giriniz"
            />


    <ImageView
        android:id="@+id/geriiiiii"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:onClick="geriGitSifremiUnuttum"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/geri3" />

    <Button
        android:id="@+id/yeniParolaGonder"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="40dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:background="@drawable/button_darkbackground"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Yeni Parola Bağlantısını Gönder!"
         />

    <ImageView
        android:id="@+id/kepViewSifremiUnuttum"
        android:layout_width="132dp"
        android:layout_height="108dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/kep"
        />

    <ImageView
        android:id="@+id/geriGitSifremiUnuttum"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:onClick="geriGitSifremiUnuttum"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/geri3" />

</RelativeLayout>