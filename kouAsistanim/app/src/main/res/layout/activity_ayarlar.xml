<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgray"
    tools:context=".ayarlar">

    <Button
        android:id="@+id/sifreYenilemeButonu"
        android:text="Sifremi Yenile"
        android:onClick="sifremiYenile"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="20dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:background="@drawable/button_darkbackground"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
    />

    <Button
        android:id="@+id/cikisYapButonu"
        android:text="Çıkış Yap"
        android:onClick="cikisimiYap"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="650dp"
        android:layout_marginStart="20dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:background="@drawable/button_darkbackground"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <TextView
        android:id="@+id/hakkimizda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:text="Hakkımızda"
        android:textSize="23dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:text="Geliştiricilerimiz "
        android:textSize="23dp"
        />
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            android:text="Doğa Almira Mümin"
        android:layout_marginStart="10dp"
            android:layout_marginTop="450dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zafer Özince"
        android:layout_marginStart="10dp"
        android:layout_marginTop="490dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asil Berk Boran Culfa"
        android:layout_marginStart="10dp"
        android:layout_marginTop="530dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />


    <Button
        android:text="Blog Hesabımızı Görmek İster Misini? "
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/yeniSifreButton"
        android:background="@null"
        android:layout_marginTop="590dp"
        android:layout_marginStart="70dp"
        android:textColor="#FFFF"
        android:layout_marginBottom="8dp"
        android:onClick="blogHesaba"
        />

    <ImageView
        android:id="@+id/geriViewAyarlar"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:onClick="geriGitAyarlar"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/geri3" />

    <ImageView
        android:id="@+id/kepViewAyarlar"
        android:layout_width="132dp"
        android:layout_height="108dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/kep" />

    <TextView
    android:id="@+id/ogrencininMailiAyarlar"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ogrencininBolumuAyarlar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        />
</RelativeLayout>