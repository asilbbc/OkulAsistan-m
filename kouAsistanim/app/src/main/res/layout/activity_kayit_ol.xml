<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgray"

    tools:context=".kayitOl">

    <EditText
        android:id="@+id/kayitEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="123dp"
        android:layout_marginStart="150dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"/>


    <EditText
        android:id="@+id/kayitSifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:hint="Parola"
        android:inputType="textPassword" />


    <TextView
        android:id="@+id/kayitMailTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="Mail  : "
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <TextView
        android:id="@+id/kayitSifreTextEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginStart="10dp"
        android:text="Şifre : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    <Button
        android:id="@+id/sistemeKayitOl"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="373dp"
        android:onClick="sistemeKayit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:background="@drawable/button_darkbackground"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Kayıt Ol" />


    <ImageView
        android:id="@+id/kepViewKayitOl"
        android:layout_width="132dp"
        android:layout_height="108dp"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="26dp"
        app:srcCompat="@drawable/kep" />

    <TextView
        android:id="@+id/fontHos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="60dp"
        android:text="HOŞ GELDİN"
        android:textSize="23dp"
        />

    <ImageView
        android:id="@+id/geriViewKayitOl"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:onClick="geriGitKayitOl"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/geri3" />



    <TextView
        android:id="@+id/boluum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginStart="90dp"
        android:text="Bölüm Seçmek İçin Basılı Tutunuz "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    <TextView
        android:id="@+id/secilenBolum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="90dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

</RelativeLayout>